@page
@model RegisterModel
@{
    ViewData["Title"] = "Zarejestruj się";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div @*class="col-md-4"*@>
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post" enctype="multipart/form-data">
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Name"></label>
                <input asp-for="Input.Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Input.Description"></label>
                <textarea asp-for="Input.Description" class="form-control"></textarea>
            </div>
            <div class="form-group">
                <label asp-for="Input.UploadFile"></label>
                <input asp-for="Input.UploadFile" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Input.IsMusician"></label>
                <input asp-for="Input.IsMusician" id="input-is-musician" onclick="collide()" />
            </div>
            <div class="form-group" id="price-collide" style="display: none">
                <label asp-for="Input.Price"></label>
                <input asp-for="Input.Price" class="form-control" />
            </div>
            <div class="form-group" id="desc-collide" style="display: none">
                <label asp-for="Input.LongDescription"></label>
                <textarea asp-for="Input.LongDescription" class="form-control"></textarea>
            </div>
            <div class="form-group" id="first-instr-collide" style="display: none">
                <label asp-for="Input.FirstInstrument"></label>
                <select asp-for="Input.FirstInstrument" class="form-control"
                        asp-items="ViewBag.Instruments">
                </select>
            </div>
            <div class="form-group" id="second-instr-collide" style="display: none">
                <label asp-for="Input.SecondInstrument"></label>
                <select asp-for="Input.SecondInstrument" class="form-control"
                        asp-items="ViewBag.Instruments">
                </select>
            </div>
            <div class="form-group" id="teacher-collide" style="display: none">
                <label asp-for="Input.TeacherSelected"></label>
                <input asp-for="Input.TeacherSelected" />
            </div>
            <div class="form-group" id="jamming-collide" style="display: none">
                <label asp-for="Input.JammingSelected"></label>
                <input asp-for="Input.JammingSelected" />
            </div>
            <div class="form-group" id="session-collide" style="display: none">
                <label asp-for="Input.SessionSelected"></label>
                <input asp-for="Input.SessionSelected" />
            </div>
            <button type="submit" class="btn btn-primary px-4 mb-3">Zarejestruj się</button>
        </form>
    </div>
