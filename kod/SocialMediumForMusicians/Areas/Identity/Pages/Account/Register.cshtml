                    </form>
                }
            }
        </section>
    </div>*@
</div>

<script>
    function collide() {
        let checkbox = document.querySelector('#input-is-musician');
        let price = document.querySelector('#price-collide');
        let desc = document.querySelector('#desc-collide')
        let firstInstr = document.querySelector('#first-instr-collide');
        let secondInstr = document.querySelector('#second-instr-collide');
        let teacher = document.querySelector('#teacher-collide');
        let jamming = document.querySelector('#jamming-collide');
        let session = document.querySelector('#session-collide');

        if (checkbox.checked) {
            price.style.display = 'block';
            desc.style.display = 'block';
            firstInstr.style.display = 'block';
            secondInstr.style.display = 'block';
            teacher.style.display = 'block';
            jamming.style.display = 'block';
            session.style.display = 'block';
        } else {
            price.style.display = 'none';
            desc.style.display = 'none';
            firstInstr.style.display = 'none';
            secondInstr.style.display = 'none';
            teacher.style.display = 'none';
            jamming.style.display = 'none';
            session.style.display = 'none';
        }
    }
</script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
